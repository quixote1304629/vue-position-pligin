{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    // 是否生成`.d.ts` 声明文件
    // "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
